<div class="pg-main container">
  <div class="callout callout-info" data-bind="visible: submitted">This Diary has already been submitted so you cannot change it</div>
  <div class="tab-content">
    {{#each days}}
    <div class="tab-pane fade {{#unless @index}}in active {{/unless}}" id="day_{{@index}}"></div>
