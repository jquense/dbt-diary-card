<div class="top-bar scrolling-pills" data-spy="affix" data-offset-top="62">
  <div class="container">
      <ul class="nav nav-pills nav-justified">
          {{#each days}}
          <li data-bind="class: { nav-success: submitted }" {{#unless @index}}class="active"{{/unless}} >
          <a href="{{url '/diary/%s' (dateFormat date 'MMM-DD-YY') }}" 
              data-url="client" 
              data-target="#day_{{@index}}" 
              data-toggle="pill">
            {{dateFormat date 'Do: dddd'}}
            <i class="fa fa-pencil" data-bind="visible: days[{{@index}}].started"></i>
          </a>
          </li>
          {{/each}}
        </ul>
